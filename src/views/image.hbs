<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>{{image.title}}</h2>
        <button class="btn btn-danger" id="btn-delete" data-id="{{image._id}}">
            <i class="fa fa-times"></i>Delete
        </button>
    </div>
    <div class="card-body">
        <p>{{image.description}}</p>
        <div class="text-center">
            <img src="/public/upload/{{image.filename}}" alt="" class="img-fluid">
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button class="btn btn-success" id="btn-like" data-id="{{image._id}}">
            üëçLike
        </button>
        <p>
            <span class="likes-count">{{image.likes}}</span>‚ù§Ô∏è
        </p>
        <p>
            <span>üëÅÔ∏è‚Äçüó®Ô∏è{{image.views}}</span>
        </p>
        <p>
            <span>üïê{{timeago image.timestamp}}</span>
        </p>
    </div>

    <div class="card mt-2">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3>Comments</h3>
            <button class="btn btn-info" id="btn-toggle-comment">
                <span>Post a Comment</span>
            </button>
        </div>
        <div class="card-body">
            <blockquote>
                <form action="/images/{{image._id}}/comment" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" id="" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <input type="text" name="email" class="form-control" id="" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <textarea name="comment" id="" class="form-control" placeholder="Your comment" rows="5"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success" id="btn-comment">
                            Post
                        </button>
                    </div>
                </form>
            </blockquote>
            <ul class="list-group p-4">
                {{#each comments}}
                    <li class="list-group-item">
                        <div class="row">
                            <a href="" class="col text-center">
                                <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" alt="">
                            </a>
                            <blockquote class="col">
                                <p class="lead">{{comment}}</p>
                                <footer class="blo">
                                    {{name}}-{{timeago timestamp}}
                                </footer>
                            </blockquote>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>