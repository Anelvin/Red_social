<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-title text-white far fa-file-image">
            Upload and image
        </h3>
    </div>
    <div class="card-body">
        <form action="/images" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <div class="inputgroup">
                    <div class="custom-file">
                        <input type="file" name="image" id="inputGroup" class="custom-file-input"
                            aria-describedat="inputGroupFileAddon" required>
                        <label for="inputGroupeFile" class="custom-file-label">Choose File</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="text" name="title" id="" class="form-control" placeholder="Title for the image" required>
            </div>
            <div class="form-group">
                <textarea name="description" id="" class="form-control" rows="2" placeholder="Description"
                    required></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-success">Upload Image</button>
            </div>
        </form>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header bg-dark text-white">
        <h3><i class="fa fa-images"></i>Recent Uploads</h3>
    </div>
    <div class="card-body">
        <div class="row">
            {{#each images}}
            <div class="col-md-4">
                <a href="/images/{{_id}}">
                    <img src="/public/upload/{{filename}}" alt="" class="w-100 h-100 img-thumbnail">
                </a>
            </div>
        {{/each}}
        </div>
    </div>
</div>