<div class="card mb-2">
    <div class="card-header bg-info text-white">
        <h5>Most popular</h5>
    </div>
    <div class="card-body">
        <div class="row">
            {{#each sidebar.popular}}
                <div class="col-md-4 mt-2">
                    <a href="/images/{{_id}}">
                        <img src="/public/upload/{{filename}}" class="w-100 h-100 image-thumbnail" alt="">
                    </a>
                </div>
            {{/each}}
        </div>
    </div>
</div>